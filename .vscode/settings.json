{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.eol": "\n",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[prisma]": {
    "editor.formatOnSave": true
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true
  // "prettier.requireConfig": true // Usar apenas Prettier se houver um arquivo de configuração no projeto
}